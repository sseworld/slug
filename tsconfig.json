{
  "compilerOptions": {
    "module": "Node16",
    "lib": ["ES6", "DOM"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
